<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.WordQuiz">

    <fragment
        android:id="@+id/timer"
        android:name="com.matheusfroes.unit.fragments.TimerFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary" />

    <FrameLayout
        android:id="@+id/questions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary" />

    <fragment
        android:id="@+id/question_controller"
        android:name="com.matheusfroes.unit.fragments.QuestionControllerFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7" />

</LinearLayout>